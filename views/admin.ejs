<!DOCTYPE html>
<html>
<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-4">
    <h2>Admin Dashboard</h2>
    <form id="addLotForm" action="/admin/add" method="POST" class="mb-4 fade-in">
      <div class="row">
        <div class="col-md-4">
          <input type="text" name="name" class="form-control" placeholder="Lot Name" required>
        </div>
        <div class="col-md-4">
          <input type="number" name="availability" class="form-control" placeholder="Availability %" required min="0" max="100">
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-primary pulse">Add Lot</button>
        </div>
      </div>
    </form>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Lot Name</th>
            <th>Availability</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (lots && lots.length > 0) { %>
            <% lots.forEach((lot, index) => { %>
              <tr class="slide-in delay-<%= index %>">
                <td><%= lot.name %></td>
                <td><%= lot.availability %>%</td>
                <td>
                  <form action="/admin/delete/<%= lot._id %>" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>